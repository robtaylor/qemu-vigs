prefix = /opt/samsung_sdk

PHONE_DIR = binary 

all:
	cd src && $(MAKE)

clean:
	cd src && $(MAKE) clean

install:
	mkdir -p $(PHONE_DIR)
	cd src && $(MAKE) install
	cp -dpr ./skins $(PHONE_DIR)
	cp -dpr ./data $(PHONE_DIR)
	cp -dpr ./conf $(PHONE_DIR)

distclean: clean
	cd ../ && $(MAKE) distclean
	rm -rf autom4te.cache config.log config.status configure
	rm -rf Makefile src/Makefile

