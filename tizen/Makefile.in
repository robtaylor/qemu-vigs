prefix = @prefix@

PHONE_DIR=Emulator

all:
	cd src && $(MAKE)

clean:
	cd src && $(MAKE) clean

install:
	mkdir -p $(PHONE_DIR)
	cd src && $(MAKE) install
	cp -dpr ./skins $(PHONE_DIR)
	cp -dpr ./data $(PHONE_DIR)/x86
	cp -dpr ./license $(PHONE_DIR)
	cp -a ./src/config_x86.ini $(PHONE_DIR)/x86/conf/config.ini

distclean: clean
	cd ../ && $(MAKE) distclean
	rm -rf autom4te.cache config.log config.status configure
	rm -rf Makefile src/Makefile

